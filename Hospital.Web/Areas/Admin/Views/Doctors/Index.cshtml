@model PagedResult<DoctorViewModel>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<table class="table table-bordered border-primary" style="text-align: center">
    <thead>
        <tr>
            <th>
                Name
            </th>
            <th>
                Gender
            </th>
            <th>
                Email
            </th>
            <th>
                Specialist
            </th>
            <th>
                Timings
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Data) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Gender)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specialist)
            </td>
            <td>
                <div>
                    <a class="btn btn-info rounded rounded-3 me-2" asp-controller="Timings" asp-action="Index" asp-route-id="@item.Id">Timings</a>
                </div>
            </td>
            <td>
                <div>
                    <a class="btn btn-info rounded rounded-3 me-2" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a class="btn btn-info rounded rounded-3 me-2" asp-action="Details" asp-route-id="@item.Id">Details</a>
                    <a class="btn btn-danger rounded rounded-3 js-delete" data-id="@item.Id" data-controller="ApplicationUsers">Delete</a>
                </div>
            </td>
        </tr>
}
    </tbody>
</table>

<cs-pager cs-paging-pagesize=(int)Model.PageSize
          cs-paging-pagenumber=(int)Model.PageNumber
          cs-paging-totalitems=(int)Model.TotalRecords
          cs-pagenumber-param="pageNumber"
          asp-controller="Doctors"
          asp-action="Index"
          cs-pager-li-current-class="page-item active"
          cs-pager-li-other-class="page-item"
          cs-pager-li-non-active-class="page-item disabled"
          cs-pager-link-current-class="page-link"
          cs-pager-link-other-class="page-link">
</cs-pager>

@section Scripts {
    <script src="~/js/generics-index.js" asp-append-version="true"></script>
}