@using Microsoft.AspNetCore.Identity
@inject UserManager<IdentityUser> _userManager
@model ApplicationUser

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>DetailsApplicationUserViewModel</h4>
    <hr />
    <dl class="row">
        <div class="col-md-8">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Name)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Name)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Gender)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Gender)
            </dd>
            @if (!await _userManager.IsInRoleAsync(Model, WebSiteRoles.Admin))
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Nationality)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Nationality)
                </dd>
            }
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                Is Doctor
            </dt>
            <dd class="col-sm-10">
                @(Model.IsDoctor ? "Yes" : "No")
            </dd>
            @if (Model.IsDoctor)
            {
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Specialist)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Specialist)
                </dd>
            }
        </div>
        @if (!await _userManager.IsInRoleAsync(Model, WebSiteRoles.Admin))
        {
            <div class="col-md-4 d-flex justify-content-start pt-4 overflow-hidden">
                <dd class="col-sm-10">
                    <img src="@Model.PictureUrl" class="picture-preview w-100" />
                </dd>
            </div>
        }
    </dl>
</div>
<div>
    @Html.ActionLink("Edit", "Edit", new { id = Model.Id }) |
    <a asp-action="Index">Back to List</a>
</div>
